{
  "version": 2,
  "builds": [
    { "src": "api/*.js", "use": "@vercel/node" },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/verify", "dest": "/api/verify.js" },
    { "src": "/create", "dest": "/api/create.js" },
    { "src": "/bot", "dest": "/api/bot.js" },
    { "src": "/(.*)", "dest": "/public/index.html" }
  ]
}
